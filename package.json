{
  "name": "@info-evry/astro-design",
  "version": "1.1.0",
  "description": "Shared design system for Info Evry Astro projects",
  "main": "src/index.css",
  "style": "src/index.css",
  "type": "module",
  "exports": {
    ".": "./src/index.css",
    "./components/*": "./src/components/*.astro",
    "./Header.astro": "./src/components/Header.astro",
    "./Footer.astro": "./src/components/Footer.astro",
    "./HeroBackground.astro": "./src/components/HeroBackground.astro"
  },
  "files": [
    "src",
    "tools"
  ],
  "scripts": {
    "generate-colors": "bun run tools/generate-colors.ts",
    "generate-colors:apply": "bun run tools/generate-colors.ts --output src/tokens/colors.css",
    "test": "bun test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@vitest/coverage-v8": "2.1.9",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "keywords": [
    "design-system",
    "css",
    "info-evry",
    "astro"
  ],
  "author": "Info Evry",
  "license": "AGPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/info-evry/astro-design.git"
  }
}
