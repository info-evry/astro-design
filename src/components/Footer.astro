---
/**
 * Shared Footer Component - Info Evry Design System
 *
 * Props:
 * - homeUrl: URL for the logo link (default: "/")
 * - tagline: Description text below logo
 * - footerLinks: Array of { href, label } for useful links
 * - socialLinks: Array of { name, href, icon } for social media
 * - organizationName: Full organization name for copyright
 */
interface SocialLink {
  name: string;
  href: string;
  icon: string;
}

interface Props {
  homeUrl?: string;
  tagline?: string;
  footerLinks?: Array<{ href: string; label: string }>;
  socialLinks?: SocialLink[];
  organizationName?: string;
}

const {
  homeUrl = "/",
  tagline = "",
  footerLinks = [],
  socialLinks = [],
  organizationName = "Association Info Evry"
} = Astro.props;

const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-brand">
        <a href={homeUrl} class="footer-logo">
          <img src="/favicon.svg" alt="" class="footer-logo-icon" width="32" height="32" />
          <span class="logo-text">Association d'Informatique d'Évry</span>
        </a>
        {tagline && <p class="footer-tagline">{tagline}</p>}
      </div>

      {footerLinks.length > 0 && (
        <div class="footer-links">
          <span class="footer-heading">Liens utiles</span>
          <nav class="footer-nav" aria-label="Liens utiles">
            {footerLinks.map(link => (
              <a href={link.href} class="footer-link" target="_blank" rel="noopener noreferrer">
                {link.label}
              </a>
            ))}
          </nav>
        </div>
      )}

      {socialLinks.length > 0 && (
        <div class="footer-connect">
          <span class="footer-heading">Réseaux</span>
          <div class="connect-grid">
            {socialLinks.map(social => (
              <a
                href={social.href}
                class="connect-item"
                target="_blank"
                rel="noopener noreferrer"
                aria-label={social.name}
                title={social.name}
              >
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" set:html={social.icon} />
              </a>
            ))}
          </div>
        </div>
      )}
    </div>

    <div class="footer-bottom">
      <p class="copyright">
        © {currentYear} {organizationName}. Tous droits réservés.
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    border-top: 1px solid var(--border-subtle);
    padding: var(--space-16) 0 var(--space-8);
    background: var(--color-bg-subtle);
  }

  .footer-content {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    gap: var(--space-12);
    margin-bottom: var(--space-12);
  }

  .footer-logo {
    display: inline-flex;
    align-items: center;
    font-size: var(--text-xl);
    font-weight: 700;
    letter-spacing: var(--tracking-tight);
    margin-bottom: var(--space-4);
  }

  .footer-logo-icon {
    flex-shrink: 0;
    margin-right: var(--space-4);
    width: 40px;
    height: 40px;
  }

  .logo-text {
    color: rgba(255, 255, 255, 0.85);
    transition: color var(--transition-fast);
  }

  .footer-logo:hover .logo-text {
    color: #ffffff;
  }

  .footer-tagline {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    line-height: var(--leading-relaxed);
  }

  .footer-heading {
    display: block;
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-text);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    margin-bottom: var(--space-4);
  }

  .footer-nav {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .footer-link {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    transition: color var(--transition-fast);
  }

  .footer-link:hover {
    color: var(--color-text);
  }

  .connect-grid {
    display: flex;
    gap: var(--space-3);
  }

  .connect-item {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius);
    color: var(--color-text-muted);
    transition: all var(--transition-base);
  }

  .connect-item:hover {
    background: color-mix(in srgb, var(--color-primary) 10%, transparent);
    border-color: color-mix(in srgb, var(--color-primary) 30%, transparent);
    color: var(--color-primary);
    transform: translateY(-2px);
  }

  .footer-bottom {
    display: flex;
    justify-content: center;
    align-items: center;
    padding-top: var(--space-8);
    border-top: 1px solid var(--border-subtle);
  }

  .copyright {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: var(--space-8);
      text-align: center;
    }

    .footer-logo {
      flex-direction: column;
      align-items: center;
      gap: var(--space-5);
    }

    .footer-logo-icon {
      margin-right: 0;
      width: 48px;
      height: 48px;
    }

    .connect-grid {
      justify-content: center;
    }

    .footer-bottom {
      flex-direction: column;
      gap: var(--space-2);
      text-align: center;
    }
  }
</style>
