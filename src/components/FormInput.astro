---
/**
 * FormInput - Reusable form input component
 * Supports text, email, password, tel, number, date inputs
 */
export interface Props {
  id: string;
  name?: string;
  type?: 'text' | 'email' | 'password' | 'tel' | 'number' | 'date' | 'search';
  label?: string;
  placeholder?: string;
  value?: string | number;
  required?: boolean;
  disabled?: boolean;
  readonly?: boolean;
  error?: string;
  hint?: string;
  min?: number | string;
  max?: number | string;
  maxlength?: number;
  pattern?: string;
  autocomplete?: string;
  class?: string;
}

const {
  id,
  name = id,
  type = 'text',
  label,
  placeholder,
  value,
  required = false,
  disabled = false,
  readonly = false,
  error,
  hint,
  min,
  max,
  maxlength,
  pattern,
  autocomplete,
  class: className = '',
} = Astro.props;

const inputClass = [error && 'invalid', className].filter(Boolean).join(' ');
---

<div class="form-group">
  {label && (
    <label for={id}>
      {label}
      {required && <span class="required-mark" aria-hidden="true">*</span>}
    </label>
  )}
  <input
    type={type}
    id={id}
    name={name}
    placeholder={placeholder}
    value={value}
    required={required}
    disabled={disabled}
    readonly={readonly}
    min={min}
    max={max}
    maxlength={maxlength}
    pattern={pattern}
    autocomplete={autocomplete}
    class={inputClass || undefined}
    aria-describedby={error ? `${id}-error` : hint ? `${id}-hint` : undefined}
    aria-invalid={error ? 'true' : undefined}
  />
  {hint && !error && <p id={`${id}-hint`} class="hint-text">{hint}</p>}
  {error && <p id={`${id}-error`} class="error-text" role="alert">{error}</p>}
</div>

<style>
  .required-mark {
    color: var(--color-error, #ef4444);
    margin-left: 2px;
  }

  .hint-text {
    color: var(--color-text-muted);
    font-size: var(--text-sm);
    margin-top: var(--space-1);
  }
</style>
