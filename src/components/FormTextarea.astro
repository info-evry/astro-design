---
/**
 * FormTextarea - Reusable form textarea component
 */
export interface Props {
  id: string;
  name?: string;
  label?: string;
  placeholder?: string;
  value?: string;
  rows?: number;
  required?: boolean;
  disabled?: boolean;
  readonly?: boolean;
  error?: string;
  hint?: string;
  maxlength?: number;
  class?: string;
}

const {
  id,
  name = id,
  label,
  placeholder,
  value,
  rows = 3,
  required = false,
  disabled = false,
  readonly = false,
  error,
  hint,
  maxlength,
  class: className = '',
} = Astro.props;

const textareaClass = [error && 'invalid', className].filter(Boolean).join(' ');
---

<div class="form-group">
  {label && (
    <label for={id}>
      {label}
      {required && <span class="required-mark" aria-hidden="true">*</span>}
    </label>
  )}
  <textarea
    id={id}
    name={name}
    placeholder={placeholder}
    rows={rows}
    required={required}
    disabled={disabled}
    readonly={readonly}
    maxlength={maxlength}
    class={textareaClass || undefined}
    aria-describedby={error ? `${id}-error` : hint ? `${id}-hint` : undefined}
    aria-invalid={error ? 'true' : undefined}
  >{value}</textarea>
  {hint && !error && <p id={`${id}-hint`} class="hint-text">{hint}</p>}
  {error && <p id={`${id}-error`} class="error-text" role="alert">{error}</p>}
</div>

<style>
  .required-mark {
    color: var(--color-error, #ef4444);
    margin-left: 2px;
  }

  .hint-text {
    color: var(--color-text-muted);
    font-size: var(--text-sm);
    margin-top: var(--space-1);
  }
</style>
