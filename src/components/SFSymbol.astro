---
/**
 * SF Symbol Icon Component - Info Evry Design System
 *
 * Renders SF Symbols using the Cupertino font.
 * Usage: <SFSymbol name="pencil" size="md" />
 */

interface Props {
  name: string;
  size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl';
  class?: string;
  label?: string;
}

// Common SF Symbols - using actual Unicode codepoints
const symbols: Record<string, string> = {
  // Actions
  'pencil': '􀈊',
  'pencil.circle': '􀈋',
  'pencil.circle.fill': '􀈌',
  'square.and.pencil': '􀈎',
  'trash': '􀈑',
  'trash.fill': '􀈒',
  'xmark': '􀆄',
  'xmark.circle': '􀁠',
  'xmark.circle.fill': '􀁡',
  'plus': '􀅼',
  'plus.circle': '􀁌',
  'plus.circle.fill': '􀁍',
  'minus': '􀅽',
  'minus.circle': '􀁎',
  'minus.circle.fill': '􀁏',
  // Navigation
  'chevron.right': '􀆊',
  'chevron.left': '􀆉',
  'chevron.down': '􀆈',
  'chevron.up': '􀆇',
  'arrow.left': '􀄪',
  'arrow.right': '􀄫',
  // Status
  'checkmark': '􀆅',
  'checkmark.circle': '􀁣',
  'checkmark.circle.fill': '􀁢',
  'exclamationmark.triangle': '􀇿',
  'exclamationmark.triangle.fill': '􀈀',
  'exclamationmark.circle': '􀁞',
  'exclamationmark.circle.fill': '􀁟',
  // Common
  'gear': '􀍟',
  'person': '􀉩',
  'person.fill': '􀉪',
  'house': '􀎞',
  'house.fill': '􀎟',
};

const { name, size = 'md', class: className = '', label } = Astro.props;

const sizeClasses: Record<string, string> = {
  'xs': 'sf-symbol-xs',
  'sm': 'sf-symbol-sm',
  'md': 'sf-symbol-md',
  'lg': 'sf-symbol-lg',
  'xl': 'sf-symbol-xl',
};

const symbol = symbols[name] || name;
---

<span
  class:list={['sf-symbol', sizeClasses[size], className]}
  aria-hidden={!label}
  aria-label={label}
  role={label ? 'img' : undefined}
>{symbol}</span>

<style>
  .sf-symbol {
    font-family: 'SF Symbols', 'Cupertino', system-ui, sans-serif;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    line-height: 1;
    vertical-align: middle;
  }

  .sf-symbol-xs { font-size: 0.75rem; }
  .sf-symbol-sm { font-size: 0.875rem; }
  .sf-symbol-md { font-size: 1rem; }
  .sf-symbol-lg { font-size: 1.25rem; }
  .sf-symbol-xl { font-size: 1.5rem; }
</style>
