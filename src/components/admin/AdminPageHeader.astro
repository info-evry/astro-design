---
/**
 * AdminPageHeader - Sticky header for admin panels
 * Replaces decorative hero sections with a minimal, functional header
 *
 * @prop title - Main title (e.g., "Administration NDI")
 * @prop subtitle - Optional subtitle/description
 * @prop breadcrumb - Optional breadcrumb path
 */
interface Props {
  title: string;
  subtitle?: string;
  breadcrumb?: string;
}

const { title, subtitle, breadcrumb } = Astro.props;
---

<header class="admin-page-header">
  <div class="admin-page-header-content container">
    {breadcrumb && (
      <nav class="admin-breadcrumb" aria-label="Breadcrumb">
        <span class="sf-symbol admin-breadcrumb-icon">@sfs:house@</span>
        <span class="admin-breadcrumb-text">{breadcrumb}</span>
      </nav>
    )}
    <div class="admin-page-header-main">
      <h1 class="admin-page-title">{title}</h1>
      {subtitle && <p class="admin-page-subtitle">{subtitle}</p>}
    </div>
    <div class="admin-page-header-actions">
      <slot />
    </div>
  </div>
</header>

<style>
.admin-page-header {
  background: var(--color-surface);
  border-bottom: 1px solid var(--border-subtle);
}

.admin-page-header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--space-4);
  padding: var(--space-4) var(--space-6);
  min-height: 60px;
}

.admin-page-header-main {
  flex: 1;
  min-width: 0;
}

.admin-breadcrumb {
  display: flex;
  align-items: center;
  gap: var(--space-2);
  font-size: var(--text-xs);
  color: var(--color-text-muted);
  margin-bottom: var(--space-1);
}

.admin-breadcrumb-icon {
  font-size: 0.875rem;
}

.admin-page-title {
  margin: 0;
  font-size: var(--text-lg);
  font-weight: 700;
  color: var(--color-text);
  line-height: 1.2;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.admin-page-subtitle {
  margin: var(--space-1) 0 0;
  font-size: var(--text-sm);
  color: var(--color-text-muted);
  line-height: 1.3;
}

.admin-page-header-actions {
  display: flex;
  align-items: center;
  gap: var(--space-2);
  flex-shrink: 0;
}

@media (max-width: 768px) {
  .admin-page-header-content {
    flex-direction: column;
    align-items: flex-start;
    padding: var(--space-3) var(--space-4);
    gap: var(--space-2);
  }

  .admin-page-header-actions {
    width: 100%;
    justify-content: flex-end;
  }

  .admin-page-title {
    font-size: var(--text-base);
  }
}
</style>
